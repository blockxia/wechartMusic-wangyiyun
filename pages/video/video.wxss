
/* 头部样式 */
.videoHeader {
  display: flex;
  height: 60rpx;
  padding: 10rpx;
  flex-wrap: ;
}


.videoHeader image {
  width: 60rpx;
  height: 60rpx;
}

.videoHeader .search {
  flex: 1; /*flex-grow设置子元素占比， 默认为0*/
  height: 100%;
  border: 1rpx solid #eee;
  margin: 0 20rpx;
  border-radius: 20rpx;
}

.videoHeader .search input {
  width: 100%;
  height: 100%;

}

.placeholder {
  text-align: center;
  color: #999;
}


/* 导航样式 */
.videoNav {
  width: 100%;
  white-space: nowrap;
}
.videoNav .navItem {
  display: inline-block;
  margin-left: 40rpx;
}

.videoNav .navItem.active {
  border-bottom: 2rpx solid #d43c33;
}

.videoNav .navItem>view {
  padding: 10rpx 15rpx;
  height: 40rpx;
  max-width: 200rpx;
  overflow: hidden;
  box-sizing: content-box;
}


/* 视频列表 */
.videoList{
  background: #eee;
  height: calc(100vh - 148rpx)
}

.videoList .videoItem {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 0 3%;
}

.videoList video {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.videoList .content {
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.videoList .footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}

.videoList .footer .avatarUrl {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.videoList .footer .nickName {
  vertical-align: middle;
  font-size: 22rpx;
  margin-left: 10rpx;
}


.videoList .comments_praised {
  float: right;
}

.videoList .comments_praised .item {
  line-height: 60rpx;
  height: 60rpx;
  margin-left: 60rpx;
  font-size: 26rpx;
  position: relative;
}

/* 修改button 默认样式 开始*/
.videoList .comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
}

.videoList .comments_praised .btn:after {
  border-color: #fff;
}
/* 修改button 默认样式 结束*/


.videoList .comments_praised .item .iconfont {
  margin-left: 10rpx;
}


.videoList .comments_praised .item .showCount {
  position: absolute;
  top: -40rpx;
  font-size: 18rpx;
}


.videoList .comments_praised .item .iconfont.active {
  color: #d43c33;
}


