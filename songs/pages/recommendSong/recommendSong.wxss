

.recommendSongContainer .header{
  position: relative;
  width: 100%;
  height: 300rpx;
}

.recommendSongContainer .header image {
  width: 100%;
  height: 100%;
}
.recommendSongContainer .header .date  {
  position: absolute;
  width: 200rpx;
  height: 60rpx;
  top: 50%;
  left: 50%;
  margin-left: -100rpx;
  margin-top: -30rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
}

.recommendSongContainer .header .day {
  font-size: 50rpx;
}


.recommendList {
  position: relative;
  top: -20rpx;
  background: #fff;
  border-radius: 40rpx;
  width: 100%;
  height:calc(100vh - 300rpx);
  padding: 20rpx;
  box-sizing: border-box;
}

.recommendList .listHeader {
  height: 60rpx;
  line-height: 60rpx;
}

.recommendList .listHeader .changeMore {
  float: right;
  font-size: 24rpx;
  color: #333;
}

.recommendList .scrollView {
  height: calc(100vh - 360rpx);
}

.recommendList .scrollView::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommendList .scrollItem {
  display: flex;
  position: relative;
  margin-top: 25rpx;
}

.recommendList .scrollItem .musicImg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
}

.recommendList .scrollItem .musicContent {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.recommendList .scrollItem .musicContent .songAuthor {
  font-size: 22rpx;
  color: #333;
}

.recommendList .scrollItem .radio {
  position: absolute;
  right: 0;
}
